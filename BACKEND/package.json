{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prisma:push": "prisma db push",
    "dev": "nodemon --watch . --ext js,json --exec node --experimental-modules --es-module-specifier-resolution=node server.js",
    "start": "node server.js"
  },
  "nodemonConfig": {
    "ignore": ["node_modules/**", ".git"],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "prisma": "^6.14.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
